# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=labelling_platform
DATABASE_URL=postgresql+psycopg2://your_db_user:your_db_password@localhost:5432/labelling_platform

# Security
# Generate a secure random key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated list of frontend URLs)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Environment
DEBUG=True